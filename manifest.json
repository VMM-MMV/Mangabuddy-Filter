{
  "manifest_version": 3,
  "name": "Manga Chapter Filter",
  "version": "1.0",
  "description": "Filters manga based on the number of chapters.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["common.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}